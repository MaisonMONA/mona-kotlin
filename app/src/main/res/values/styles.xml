<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/offWhite</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/offWhite</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/offWhite</item>
        <item name="colorSecondary">@color/monaYellow</item>
        <item name="colorSecondaryVariant">@color/bluePowder</item>
        <item name="android:colorBackground">@color/offWhite</item>

        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="isLightTheme">true</item>

    </style>

    <style name="Theme.Mona" parent="AppTheme"/>

    <style name="Theme.Mona.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mona.BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="iconSize">@dimen/tab_icon_size</item>
        <item name="rippleColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Mona.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Mona.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="TextAppearance.Mona.Tablayout.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/grey</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="TextAppearance.Mona.Odj.Fragment" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/odj_fragment_name_size</item>
    </style>

    <style name="TextAppearance.Mona.Odj.Title" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/odj_title_size</item>
    </style>

    <style name="TextAppearance.Mona.Odj.Attributes" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/odj_attributes_size</item>
    </style>


    <!-- Item Text Styles -->
    <style name="TextAppearance.Mona.Item.Title.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextAppearance.Mona.Item.Artist.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_artist_size</item>
    </style>

    <style name="TextAppearance.Mona.Item.Attributes.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/item_others_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="TextAppearance.Mona.Item.Opinion.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/item_others_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--List item styles-->

    <style name="TextAppearance.Mona.List.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/card_title_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Mona.List.Borough" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/card_borough_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextAppearance.Mona.Collection.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/card_collection_title_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Mona.Featured" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/featured_message_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Mona.Username" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/username_text_size</item>
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="TextAppearance.Mona.Settings" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/options_text_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextAppearance.Mona.Badge" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/badge_cards_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Mona.Badge.Detail" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/badge_detail_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Menu style -->
    <style name="menu_style">
        <item name="fontFamily">@font/gotham_rounded_light</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/monaYellow</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">0.5</item>
    </style>


    <style name="odj_text" >
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="oeuvre_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/offWhite</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="isLightTheme">true</item>
    </style>

    <!-- Item Alignement -->
    <style name="ItemAlignement" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- Location Pin Theme -->
    <style name="locationPinTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">@color/androidBlue</item>
    </style>

    

</resources>
