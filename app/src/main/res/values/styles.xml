<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/offWhite</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/offWhite</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/offWhite</item>
        <item name="colorSurface">@color/grey</item>
        <item name="colorSecondary">@color/monaYellow</item>
        <item name="android:colorBackground">@color/offWhite</item>
    </style>

    <style name="Theme.Mona" parent="AppTheme"/>

    <style name="Theme.Mona.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mona.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Mona.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="TextAppearance.Mona.Tablayout.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/grey</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="Theme.Mona.Tablayout" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/TextAppearance.Mona.Tablayout.Text</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabIndicatorColor">@color/monaYellow</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/monaYellow</item>
    </style>


    <style name="odj_text" >
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="oeuvre_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/offWhite</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Item Alignement -->
    <style name="ItemAlignement" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>
