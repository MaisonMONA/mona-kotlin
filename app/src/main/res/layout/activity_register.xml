<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RegisterActivity"
    android:background="@color/offWhite"
    android:gravity="center">

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/authentification_margin"
        android:hint="@string/username"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:backgroundTint="@color/monaYellow">

    </EditText>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/authentification_margin"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:backgroundTint="@color/monaYellow">

    </EditText>

    <EditText
        android:id="@+id/register_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/authentification_margin"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:backgroundTint="@color/monaYellow">

    </EditText>


    <TextView
        android:id="@+id/register_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_error_message"
        android:textColor="@color/red"
        android:visibility="invisible">


    </TextView>

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/androidBlue"
        android:text="@string/register_button" />

</LinearLayout>