<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.mona.viewmodels.LieuDetailViewModel" />

        <variable
            name="callback"
            type="com.example.mona.fragment.LieuDetailFragment.Callback" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oeuvre_detail_app_bar_height"
            android:animateLayoutChanges="true"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="center"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/oeuvre_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/oeuvre_detail_app_bar_height"
                        android:background="@drawable/item_background"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@{viewModel.lieu.photo_path}"
                        app:layout_collapseMode="parallax" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/oeuvre_image"
                        android:layout_alignParentBottom="true"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/button_cam"
                            android:layout_width="@dimen/item_button_size"
                            android:layout_height="@dimen/item_button_size"
                            android:layout_marginHorizontal="@dimen/item_button_horizontal_margin"
                            android:layout_marginVertical="@dimen/item_button_vertical_margin"
                            android:background="@drawable/odj_camera"
                            android:onClick="@{() -> callback.captureLieu(viewModel.lieu)}"
                            app:isGone="@{viewModel.isCollected}" />

                        <ImageButton
                            android:id="@+id/button_map"
                            android:layout_width="@dimen/item_button_size"
                            android:layout_height="@dimen/item_button_size"
                            android:layout_marginHorizontal="@dimen/item_button_horizontal_margin"
                            android:layout_marginVertical="@dimen/item_button_vertical_margin"
                            android:background="@drawable/odj_map"
                            android:onClick="@{() -> callback.openMap(viewModel.lieu)}"
                            app:isGone="@{viewModel.isCollected}" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_detail_back"
                    app:titleTextColor="?attr/colorOnSurface" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/oeuvre_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/fab_bottom_padding"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_normal">

                <TextView
                    android:id="@+id/lieu_title"
                    style="@style/TextAppearance.Mona.Item.Artist.Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text='@{viewModel.lieu.title}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Biliotheque municipale" />

                <TextView
                    android:id="@+id/lieu_borough"
                    style="@style/TextAppearance.Mona.Item.Attributes.Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_extra_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@{viewModel.lieu.borough}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lieu_title"
                    tools:text="Plateau Mont-Royale" />

                <TextView
                    android:id="@+id/lieu_category"
                    style="@style/TextAppearance.Mona.Item.Attributes.Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_extra_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@{viewModel.lieu.category.fr}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lieu_borough"
                    tools:text="Grosse categorie" />

                <TextView
                    android:id="@+id/oeuvre_capture_date"
                    style="@style/TextAppearance.Mona.Item.Opinion.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@{viewModel.captureDateMessage}"
                    app:isVisible="@{viewModel.isCollected}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lieu_category"
                    tools:text="Cette oeuvre a été capturé le 23-09-2019" />

                <RatingBar
                    android:id="@+id/oeuvre_rating"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:isIndicator="true"
                    android:rating="@{viewModel.lieu.rating}"
                    app:isVisible="@{viewModel.isCollected}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/oeuvre_capture_date"
                    tools:rating="3.5"></RatingBar>

                <TextView
                    android:id="@+id/plant_description"
                    style="@style/TextAppearance.Mona.Item.Opinion.Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:minHeight="@dimen/oeuvre_comment_min_height"
                    android:text="@{viewModel.lieu.comment}"
                    android:textIsSelectable="true"
                    app:isVisible="@{viewModel.isCollected}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/oeuvre_rating"
                    tools:text="Commentaire: Cette oeuvre me fait chier en esti. Calisse qu'elle est pas belle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="@{()-> callback.updateTarget(viewModel.lieu)}"
            android:tint="@{viewModel.isTarget ? @color/target : @color/white}"
            app:isGone="@{viewModel.isCollected}"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_target_white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>