<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.ListFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selection">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <ImageView
            android:id="@+id/oeuvre_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_oeuvre_normal"
            android:layout_margin="5dp">
        </ImageView>
        <ImageView
            android:id="@+id/oeuvre_targetted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_oeuvre_target"
            android:layout_margin="5dp">
        </ImageView>
        <ImageView
            android:id="@+id/oeuvre_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_oeuvre_collected"
            android:layout_margin="5dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lieu_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/pin_lieu_normal"></ImageView>

        <ImageView
            android:id="@+id/lieu_targetted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/pin_lieu_target"></ImageView>

        <ImageView
            android:id="@+id/lieu_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/pin_lieu_collected"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/patrimoine_normal"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_patrimoine_normal" />

        <ImageView
            android:id="@+id/patrimoine_targetted"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_patrimoine_target" />

        <ImageView
            android:id="@+id/patrimoine_collected"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_patrimoine_collected" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtre">

    </TextView>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_group"
        android:layout_margin="5dp"
        android:checkedButton="@+id/radio_alphabet">

        <RadioButton
            android:id="@+id/radio_alphabet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-Z" />

        <RadioButton
            android:id="@+id/radio_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affichage">

    </TextView>
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/androidBlue"
        android:text="filtrer"
        android:layout_gravity="center"/>

</LinearLayout>