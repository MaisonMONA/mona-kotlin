<?xml version="1.0" encoding="utf-8"?><LinearLayout android:layout_height="match_parent"    android:layout_width="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:weightSum="1">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="187dp"        android:background="?attr/colorSecondaryVariant"        android:gravity="bottom"        android:orientation="vertical">        <TextView            android:id="@+id/username"            style="@style/TextAppearance.Mona.Username"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="30dp"            android:padding="@dimen/username_padding"            tools:text="user@mona.ca" />        <TextView            android:id="@+id/more_user_artworks"            style="@style/TextAppearance.Mona.Username"            android:layout_width="match_parent"            android:layout_height="35dp"            android:padding="6dp"            android:paddingStart="@dimen/username_padding"            android:text="@string/more_user_artworks_count"            android:textSize="20sp" />        <TextView            android:id="@+id/more_user_badges"            style="@style/TextAppearance.Mona.Username"            android:layout_width="match_parent"            android:layout_height="47dp"            android:padding="6dp"            android:paddingStart="@dimen/username_padding"            android:text="@string/more_user_badges_count"            android:textSize="20sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="0.3"        android:background="?attr/colorPrimary"        android:orientation="vertical"        android:padding="@dimen/options_padding">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="@dimen/options_padding"            android:orientation="horizontal">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/more_ic_how_it_works"                android:backgroundTint="@color/grey" />            <TextView                android:id="@+id/how_it_works_button"                style="@style/TextAppearance.Mona.Settings"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginHorizontal="@dimen/options_padding"                android:clickable="true"                android:text="@string/how_it_works" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="@dimen/options_padding"            android:orientation="horizontal">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/more_ic_about"                android:backgroundTint="@color/grey" />            <TextView                android:id="@+id/about_button"                style="@style/TextAppearance.Mona.Settings"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginHorizontal="@dimen/options_padding"                android:clickable="true"                android:text="@string/about" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="@dimen/options_padding"            android:orientation="horizontal">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/more_ic_sun_quisommesnous"                android:backgroundTint="@color/grey" />            <TextView                android:id="@+id/who_are_we_button"                style="@style/TextAppearance.Mona.Settings"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginHorizontal="@dimen/options_padding"                android:clickable="true"                android:text="@string/who_are_we" />        </LinearLayout>        <!--<LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="@dimen/options_padding"            android:orientation="horizontal">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/more_ic_rss_feed"                android:backgroundTint="@color/grey"/>            <TextView                android:id="@+id/offline_button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/offline_mode"                android:clickable="true"                android:layout_marginHorizontal="@dimen/options_padding"                style="@style/TextAppearance.Mona.Settings"/>            <Switch                android:id="@+id/more_online_switch"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="right"                android:layout_marginLeft="130dp"                tools:ignore="UseSwitchCompatOrMaterialXml" />        </LinearLayout>-->        <!--<LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="@dimen/options_padding"            android:orientation="horizontal">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/more_ic_sign_out"                android:backgroundTint="@color/grey"/>            <TextView                android:id="@+id/sign_out_button"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/sign_out"                android:clickable="true"                android:layout_marginHorizontal="@dimen/options_padding"                style="@style/TextAppearance.Mona.Settings"/>        </LinearLayout>-->    </LinearLayout></LinearLayout>