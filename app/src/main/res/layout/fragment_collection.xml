<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/collection_recyclerview_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/monaYellow">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="horizontal">

            <Button
                android:id="@+id/badge_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Badge"
                android:clickable="true">
            </Button>

            <TextView
                android:id="@+id/badge_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Badge"
                android:clickable="true"
                android:layout_marginHorizontal="@dimen/options_padding"
                style="@style/TextAppearance.Mona.Settings"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collection_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="?attr/actionBarSize"
        tools:listitem="@layout/recyclerview_collection_oeuvre"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="2"
        android:scrollbars="vertical"
        android:scrollbarSize="8dp"
        android:clipToPadding="false"
        android:scrollbarThumbVertical="@color/monaYellow"
        tools:context="com.maison.mona.activities.MainActivity"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
